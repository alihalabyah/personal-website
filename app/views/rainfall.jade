extends ./common/layout

block head
  style.
    *{}body,html{height:100%}body{overflow:hidden;margin:0;padding:0;-webkit-transition:background .25s}
    .container{height:100%;width:100%;}iframe,audio{position:absolute;left:-999em;top:-999em;}img{width:80%;height:auto;margin-left:10%;position:absolute;bottom:0;pointer-events:none}
    .floor{position:absolute;bottom:0;left:0;height:50px;width:100%;background-color:#eaeaea;border-top:1px solid #e9e9e9;}

block content
  canvas(id="rain")
  .floor

  script(src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
  script(src="js/rain.min.js")

